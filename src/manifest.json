{
  "manifest_version": 3,
  "name": "Medium â†’ Freedium QR",
  "description": "Freedium QR code for the current Medium article.",
  "version": "1.0",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": ["tabs", "scripting"],
  "host_permissions": [
    "https://freedium.cfd/*",
    "https://medium.com/*",
    "https://*.medium.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate Freedium QR",
    "default_icon": "assets/icon-48.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
